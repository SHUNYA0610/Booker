<h1>Editing Book</h1>

    <% if @book.errors.any? %>
      <div class="error-message">
       <div class="error-title"><%= @book.errors.count %> errors prohibited this book from being saved:</div>
        <ul>
          <div class="error-list">
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </div>
        </ul>
      </div>
    <% end %>
    
<!-- form_with部分 -->
<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
	
  <h4>Body</h4>
  <%= f.text_area :body %>
	
  <%= f.submit 'Update Book' %>
  
  <div class="link">
  <%= link_to "Show", book_path(@book.id) %>
  <p>|</p>
  <%= link_to "back", { :action => "index" }, :method => "get"  %>
  </div>
<% end %>
