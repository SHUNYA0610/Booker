<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr><% @books.each do |book| %>
      <td class="left"><%= book.title %></td>
      <td class="left"><%= book.body %></td>
      <td class="side"><%= link_to "Show", book_path(book.id) %></td>
      <td class="side"><%= link_to "Edit", edit_book_path(book.id)  %></td>
      <td class="side"><%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure？" %></td>
      <td><tr>
    <% end %>
    </tr>
  </tbody>
</table>

<h1>New Book</h1>
<div>
  <%= flash[:notice] %>
</div>
<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<!-- form_with部分 -->
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>
